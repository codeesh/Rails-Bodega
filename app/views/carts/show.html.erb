<h1><%= @user.name %>'s Cart</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    <tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Price</strong></td>
    </tr>
<% @user.cart.each do |cart_item| %>
  <tr>

    <td><%= cart_item.name %></td>
    <td><%= cart_item.price %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<br>



Total: $<%= @user.cart_total %>
