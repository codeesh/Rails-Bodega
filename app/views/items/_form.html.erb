<%= form_for(@item) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %></div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price %></div>

  <div class="form-group">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %></div>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>
