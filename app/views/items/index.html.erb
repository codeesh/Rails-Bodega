<h1>Listing Purchases</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    <tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Price</strong></td>
      <td><strong>Amount in Stock</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @items.each do |item| %>
      <tr>

        <td><%= item.name %></td>
        <td>$<%= item.price %></td>
        <td><%= item.quantity %></td>
        <% if current_user.admin%>
        <td><%= link_to "Show #{item.name}", purchase_path(purchase), {:class => "btn btn-primary"} %></td>
        <% else %>
        <td><%= link_to "Pick up #{item.name}", purchase_path(purchase), {:class => "btn btn-primary"} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

