<%= form_for(@purchase) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %></div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control" %></div>

  <div class="form-group">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, class: "form-control" %></div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
