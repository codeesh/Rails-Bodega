<h1><%= @user.name %>'s Cart</h1>



<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    <tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Price</strong></td>
      <td><strong>Quantity</strong></td>
    </tr>

  <% @user.user_items.each do |user_item| %>
    <tr>
      <td><%= Item.find(user_item.item_id).name %></td>
      <td>$<%= Item.find(user_item.item_id).price %></td>
      <td><%= user_item.quantity %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<br>

<strong>Number of Items:</strong> <%= @user.cart_quantity %><br>
<strong>Total:</strong> $<%= @user.cart_price %><br></br>
